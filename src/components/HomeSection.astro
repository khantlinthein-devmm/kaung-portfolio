---
// You can customize these details
const name = "Kaung Set Khant Myint Thien";
const title = "Director ";
const description = "I build elegant, responsive websites with modern technologies.";
---

<section id="home" class="home">
  <div class="container">
    <div class="content">
      <h1 class="name">{name}</h1>
      <h2 class="title">{title}</h2>
      <p class="description">{description}</p>
      <div class="cta">
        <a href="#contact" class="btn primary">Get In Touch</a>
        <a href="#about" class="btn secondary">About Me</a>
      </div>
    </div>
    <div class="image">
      <img src="/assets/profile-pic.jpg" alt={name} />
    </div>
  </div>
</section>

<style>
  .home {
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .container {
    display: flex;
    align-items: center;
    gap: 4rem;
    width: 100%;
  }

  .content {
    flex: 1;
  }

  .name {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .title {
    font-size: 1.5rem;
    color: var(--primary-color);
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .description {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    max-width: 600px;
    color: var(--secondary-text);
  }

  .cta {
    display: flex;
    gap: 1rem;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .btn.primary {
    background-color: var(--primary-color);
    color: white;
  }

  .btn.secondary {
    border: 1px solid var(--primary-color);
    color: var(--primary-color);
  }

  .btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-decoration: none;
  }

  .image {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .image img {
    max-width: 350px;
    border-radius: 50%;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column-reverse;
      gap: 2rem;
      text-align: center;
    }

    .name {
      font-size: 2.5rem;
    }

    .description {
      margin: 0 auto 2rem;
    }

    .cta {
      justify-content: center;
    }

    .image img {
      max-width: 250px;
    }
  }
</style>