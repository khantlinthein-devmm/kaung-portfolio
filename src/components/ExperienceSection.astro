---
// Customize with your experiences
const experiences = [
  {
    title: "Senior Front-end Developer",
    company: "Tech Solutions Inc.",
    period: "2022 - Present",
    description: "Leading front-end development for enterprise web applications. Implemented modern UI architecture using React and TypeScript. Mentored junior developers and established coding standards."
  },
  {
    title: "Web Developer",
    company: "Digital Agency XYZ",
    period: "2019 - 2022",
    description: "Developed responsive websites for various clients across industries. Worked closely with designers to ensure pixel-perfect implementations. Improved site performance and SEO."
  },
  {
    title: "Junior Developer",
    company: "StartUp Co.",
    period: "2017 - 2019",
    description: "Built and maintained company website and client portals. Collaborated with the marketing team to implement analytics and tracking. Assisted with UX improvements based on user feedback."
  }
];

// Customize with your education
const education = [
  {
    degree: "B.S. Computer Science",
    institution: "University of Technology",
    period: "2013 - 2017",
    description: "Focused on web technologies and user interface design. Graduated with honors."
  }
];
---

<section id="experience" class="experience">
  <h2 class="section-title">Experience</h2>
  
  <div class="timeline">
    <h3>Work Experience</h3>
    
    {experiences.map(exp => (
      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <div class="header">
            <h4>{exp.title}</h4>
            <div class="company-info">
              <span class="company">{exp.company}</span>
              <span class="period">{exp.period}</span>
            </div>
          </div>
          <p>{exp.description}</p>
        </div>
      </div>
    ))}
    
    <h3>Education</h3>
    
    {education.map(edu => (
      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <div class="header">
            <h4>{edu.degree}</h4>
            <div class="company-info">
              <span class="company">{edu.institution}</span>
              <span class="period">{edu.period}</span>
            </div>
          </div>
          <p>{edu.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .timeline {
    margin-top: 2rem;
  }

  .timeline h3 {
    font-size: 1.75rem;
    margin: 2rem 0 1.5rem;
  }

  .timeline-item {
    position: relative;
    padding-left: 2rem;
    margin-bottom: 2.5rem;
  }

  .timeline-marker {
    position: absolute;
    left: 0;
    top: 0.5rem;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background-color: var(--primary-color);
  }

  .timeline-marker::before {
    content: '';
    position: absolute;
    left: 0.4rem;
    top: 1rem;
    width: 0.2rem;
    height: calc(100% + 1.5rem);
    background-color: rgba(59, 130, 246, 0.3);
  }

  .timeline-item:last-child .timeline-marker::before {
    display: none;
  }

  .timeline-content .header {
    margin-bottom: 0.5rem;
  }

  .timeline-content h4 {
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
  }

  .company-info {
    display: flex;
    gap: 1rem;
    color: var(--secondary-text);
    font-size: 0.95rem;
  }

  .period {
    color: var(--primary-color);
  }

  @media (max-width: 768px) {
    .timeline-item {
      padding-left: 1.5rem;
    }

    .company-info {
      flex-direction: column;
      gap: 0.25rem;
    }
  }
</style>