---
// Customize with your experiences
const experiences = [
  {
    title: "Director",
    company: "Sports World Super Sport Trading Company",
    period: "2022 - Present",
    description: "Leading operations and strategic decision-making for a sports trading company. Overseeing business development, partnerships, and company growth initiatives."
  },
  {
    title: "Senior Manager",
    company: "Global Sports Enterprises",
    period: "2018 - 2022",
    description: "Managed key accounts and business relationships. Developed and implemented strategic plans for expanding market presence. Supervised team of account executives."
  },
  {
    title: "Account Manager",
    company: "Athletic Gear International",
    period: "2015 - 2018",
    description: "Maintained client relationships and secured new business opportunities. Coordinated with suppliers and partners to ensure timely delivery of products. Analyzed market trends to optimize sales strategies."
  }
];

// Customize with your education
const education = [
  {
    degree: "M.Sc. Business Administration",
    institution: "University of Manchester",
    period: "2013 - 2015",
    description: "Focused on business management and strategic leadership. Graduated with distinction."
  },
  {
    degree: "B.Eng. Engineering",
    institution: "University of Manchester",
    period: "2009 - 2013",
    description: "Studied engineering principles with emphasis on practical applications. Participated in multiple engineering projects and competitions."
  }
];
---

<section id="experience" class="experience">
  <h2 class="section-title">Experience</h2>
  
  <div class="timeline">
    <h3>Work Experience</h3>
    
    {experiences.map(exp => (
      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <div class="header">
            <h4>{exp.title}</h4>
            <div class="company-info">
              <span class="company">{exp.company}</span>
              <span class="period">{exp.period}</span>
            </div>
          </div>
          <p>{exp.description}</p>
        </div>
      </div>
    ))}
    
    <h3>Education</h3>
    
    {education.map(edu => (
      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <div class="header">
            <h4>{edu.degree}</h4>
            <div class="company-info">
              <span class="company">{edu.institution}</span>
              <span class="period">{edu.period}</span>
            </div>
          </div>
          <p>{edu.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .timeline {
    margin-top: 2rem;
  }

  .timeline h3 {
    font-size: 1.75rem;
    margin: 2rem 0 1.5rem;
  }

  .timeline-item {
    position: relative;
    padding-left: 2rem;
    margin-bottom: 2.5rem;
  }

  .timeline-marker {
    position: absolute;
    left: 0;
    top: 0.5rem;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background-color: var(--primary-color);
  }

  .timeline-marker::before {
    content: '';
    position: absolute;
    left: 0.4rem;
    top: 1rem;
    width: 0.2rem;
    height: calc(100% + 1.5rem);
    background-color: rgba(59, 130, 246, 0.3);
  }

  .timeline-item:last-child .timeline-marker::before {
    display: none;
  }

  .timeline-content .header {
    margin-bottom: 0.5rem;
  }

  .timeline-content h4 {
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
  }

  .company-info {
    display: flex;
    gap: 1rem;
    color: var(--secondary-text);
    font-size: 0.95rem;
  }

  .period {
    color: var(--primary-color);
  }

  @media (max-width: 768px) {
    .timeline-item {
      padding-left: 1.5rem;
    }

    .company-info {
      flex-direction: column;
      gap: 0.25rem;
    }
  }
</style>